# ===========================================
# pyresume Docker 环境配置文件模板
# 复制此文件为 .env 并修改相应配置
# ===========================================

# 数据库配置
DB_NAME=pyresume_db
DB_USER=pyresume
DB_PASSWORD=请修改为强密码
DB_HOST=db
DB_PORT=3306
DB_ROOT_PASSWORD=请修改为强密码

# Django配置
DJANGO_SECRET_KEY=请生成新的密钥
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend,your-domain.com

# 服务端口配置
FRONTEND_PORT=3000
BACKEND_PORT=8000
DB_PORT_EXTERNAL=3306

# Gunicorn配置
GUNICORN_WORKERS=3
GUNICORN_TIMEOUT=120

# 邮件配置
# 开发环境可以使用console后端（邮件输出到控制台）
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# 生产环境使用SMTP后端
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=请填写你的邮箱
EMAIL_HOST_PASSWORD=请填写你的邮箱密码或应用专用密码
DEFAULT_FROM_EMAIL=请填写默认发件人邮箱

# 时区配置
TZ=Asia/Shanghai

# 生产环境配置
ENVIRONMENT=production